@model List<Vindi.Models.Customer>
@{
}

<h2>Customers</h2>

@if (Model.Count < 1)
{
    <p>We don't have any customers yet.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">Customer</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Customer customer in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(customer.name, "Details", "Customers", new { id = customer.id }, new
                        {
                            @class
                   = "link-info"
                        })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


